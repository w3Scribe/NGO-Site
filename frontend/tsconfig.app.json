{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app": ["./app"],
      "@app/*": ["./app/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@ui": ["./components/ui"],
      "@ui/*": ["./components/ui/*"],
      "@constants": ["./constants"],
      "@constants/*": ["./constants/*"],
      "@lib": ["./lib"],
      "@lib/*": ["./lib/*"],
      "@pages": ["./pages"],
      "@pages/*": ["./pages/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@assets": ["./assets"],
      "@assets/*": ["./assets/*"],
      "@public": ["./public"],
      "@public/*": ["./public/*"]
    }
  },
  "include": [
    "src",
    "app",
    "pages",
    "constants",
    "assets",
    "components",
    "utils",
    "lib"
  ]
}
