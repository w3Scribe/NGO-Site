                  {stats.volunteers.toLocaleString()}+
                </div>
                <div className="text-sm lg:text-lg opacity-80">Volunteers</div>
              </div>
              <div>
                <div className="text-3xl lg:text-5xl font-bold mb-1">
                  {stats.ngos.toLocaleString()}+
